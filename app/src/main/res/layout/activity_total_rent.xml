<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TotalRentActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#5F9ADA"
       android:layout_marginTop="100sp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        app:cardCornerRadius="20sp">
        <TextView
            android:id="@+id/reservedslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A-15"
            android:fontFamily="@font/poppins"
            android:padding="10sp"
            android:layout_gravity="center_horizontal"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70sp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entry Time"
                    android:fontFamily="@font/poppins"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/ttt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exit Time"
                    android:fontFamily="@font/poppins"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tttt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Rent"
                    android:fontFamily="@font/poppins"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/entrytime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12: 06 pm"
                    android:fontFamily="@font/poppins"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/exittime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01: 02 pm"
                    android:fontFamily="@font/poppins"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/totalrent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="450Rs"
                    android:fontFamily="@font/poppins"
                    android:padding="10sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>








            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>